// I have designed a project to perform some opertaions on them,
// it is not advanced just a basics calculator plz Suggest any change if u like it.

import java.util.*;

public class Calculator {
    public static void main(String[] arg){
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter First No: ");
        Float a = sc.nextFloat();
        System.out.print("Enter Second No: ");
        Float b = sc.nextFloat();
        System.out.print("Choose Your Opreator +, -, *, /, %: ");
        char Operator = sc.next().charAt(0);

        switch(Operator){
            case '+' : System.out.print(a + b);
                break;
            case '-' : System.out.print(a - b);
                break;
            case '*' : System.out.print(a * b);
                break;
            case '/' : System.out.print(a / b);
                break;
            case '%' : System.out.print(a % b);
                break;
            default : System.out.print("It is basic Calculator plz , only do basic calculation");
        }
    }
}
